build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:
    Network.UDP.Pal,
    Network.UDP.Pal.Socket,
    Network.UDP.Pal.Types,
    Network.UDP.Pal.Binary,
    Network.UDP.Pal.EchoServer,
    Network.UDP.Pal.Reliable.Receiver,
    Network.UDP.Pal.Reliable.ReliableUDP,
    Network.UDP.Pal.Reliable.Types
  ghc-options:         -Wall -O2

  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       
    base,
    network,
    binary, 
    bytestring, 
    mtl, stm,
    containers,
    halive, lens

executable demo
  main-is:             Main.hs
  ghc-options:         -threaded -Wall -O2
  hs-source-dirs:      exec
  default-language:    Haskell2010
  build-depends:       base, udp-pal, network, halive

executable client
  main-is:             Client.hs
  ghc-options:         -threaded -Wall -O2
  hs-source-dirs:      exec
  default-language:    Haskell2010
  build-depends:       base, udp-pal, network, halive

executable server
  main-is:             Server.hs
  ghc-options:         -threaded -Wall -O2
  hs-source-dirs:      exec
  default-language:    Haskell2010
  build-depends:       base, udp-pal, network, halive

executable reliable
  main-is:             Main.hs
  hs-source-dirs:      reliable
  default-language:    Haskell2010
  ghc-options:         -threaded -Wall -O2
  build-depends:       base, udp-pal, network, bytestring, 
                       lens, containers, mtl, stm, binary, halive, linear, gl

executable reliablegl
  main-is:             MainGL.hs
  hs-source-dirs:      reliable
  default-language:    Haskell2010
  ghc-options:         -threaded -Wall -O2
  build-depends:       base, udp-pal, network, bytestring, 
                       lens, containers, mtl, stm, binary, halive, gl-pal2, lens, glfw-pal, linear, gl, random
